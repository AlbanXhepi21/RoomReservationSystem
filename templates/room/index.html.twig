{% extends "baseUser.html.twig" %}
{% block title %}Room index{% endblock %}

{% block nav %} {{ parent() }}
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">



        <h1 class="h2">Rooms</h1>
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

            <table class="table">
                <caption>Rooms list</caption>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Capacity</th>
                    <th>Building</th>
                    <th colspan="3" >Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for room in rooms %}
                    <tr>
                        <td>{{ room.id }}</td>
                        <td>{{ room.name }}</td>
                        <td>{{ room.capacity }}</td>
                        <td>{{ room.building.name }}</td>
                        <td>
                            <button onclick="location.href='{{ path('app_room_show', {'id': room.id}) }}'" type="button" class="btn btn-success ml-1">Show</button>
                        </td>
                        <td>
                            <button onclick="location.href='{{ path('app_room_edit', {'id': room.id}) }}'" type="button" class="btn btn-warning ml-1">Edit</button>
                        </td>
                        <td>
                            {{ include('room/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% endfor %}


                </tbody>
            </table>

        </div>
        <button onclick="location.href='{{ path('app_room_new') }}'" class="btn btn-success ml-1">+ Create new</button>

    </main>
{% endblock %}




