{% extends 'base_admin.html.twig' %}

{% block title %}Building{% endblock %}

{% block nav %} {{ parent() }}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

    <h1>Building</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ building.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ building.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ building.address }}</td>
            </tr>
        </tbody>
    </table>

    <button onclick="location.href='{{ path('app_building_index') }}'" type="button" class="btn btn-success ml-1">Back</button>
    <button onclick="location.href='{{ path("app_building_rooms", {'id': building.id}) }}'" type="button" class="btn btn-success ml-1">View Rooms</button>


{% endblock %}