{% extends 'base.html.twig' %}
{% block title %}Register!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}

    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4"> {% if not is_granted("ROLE_ADMIN") %} Sign up {% else %} NEW USER {% endif %}</p>

                                     {{ form_start(registrationForm, {'attr': {'class': 'mx-1 mx-md-4'}})}}
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_label(registrationForm.firstName, 'Name', {'label_attr': {'class': 'form-label'}}) }}
                                            </div>
                                        </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_label(registrationForm.lastName, 'Surname', {'label_attr': {'class': 'form-label'}}) }}
                                        </div>
                                    </div>


                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'value' : {{ user.email }}} }) }}
                                            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div style="padding-right: 10px;"> Role </div>
                                        {% if is_granted("ROLE_ADMIN") %}
                                        <div class="form-outline flex-fill mb-0">
                                        {{ form_widget(registrationForm.roleAdmin, {'attr': {'class': 'form-check-input me-2'}}) }}
                                        {{ form_label(registrationForm.roleAdmin, 'ADMIN', {'label_attr': {'class':'form-check-label'}}) }}
                                        </div>
                                    {% endif %}
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_widget(registrationForm.roleUser, {'attr': {'class': 'form-check-input me-2'}}) }}
                                            {{ form_label(registrationForm.roleUser, 'USER', {'label_attr': {'class':'form-check-label'}}) }}
                                        </div>
                                    </div>

                                    <div class="form-check d-flex justify-content-center mb-5">
                                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input me-2'}}) }}
                                        {{ form_label(registrationForm.agreeTerms, 'I agree all statements in   ', {'label_attr': {'class': 'form-check-label'}}) }} <a href="#!">Terms of service</a>
                                    </div>


                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            {% if is_granted("ROLE_ADMIN") %}
                                            <button type="submit" class="btn btn-primary btn-lg">Add</button>
                                            {% else %}
                                            <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                            {% endif %}
                                        </div>

                                     {{ form_end(registrationForm) }}

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://thalassafestival.com/wp-content/uploads/2019/12/registration-icon-png-6.png"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}